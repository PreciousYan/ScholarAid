<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Medium 按钮 -->
    <Button
        android:id="@+id/mediumButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Medium"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3F51B5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/mediumDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Explore insightful articles on Medium."
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/mediumButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="16dp"/>

    <!-- arXiv 按钮 -->
    <Button
        android:id="@+id/arxivButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="arXiv"
        android:textColor="#FFFFFF"
        android:backgroundTint="#009688"
        app:layout_constraintTop_toBottomOf="@id/mediumDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/arxivDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Access scientific papers on arXiv."
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/arxivButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="16dp"/>

    <!-- Connected Papers 按钮 -->
    <Button
        android:id="@+id/connectedPapersButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Connected Papers"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF5722"
        app:layout_constraintTop_toBottomOf="@id/arxivDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/connectedPapersDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Discover related research on Connected Papers."
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/connectedPapersButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>