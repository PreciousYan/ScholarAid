<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E0F7FA">

    <Button
        android:id="@+id/choosePdfButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choose PDF File"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00796B"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/viewHistoryButton"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <Button
        android:id="@+id/viewHistoryButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View PDF History"
        android:textColor="#FFFFFF"
        android:backgroundTint="#004D40"
        app:layout_constraintTop_toBottomOf="@id/choosePdfButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>